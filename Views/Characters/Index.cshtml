@model IEnumerable<challenge_NET.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center text-uppercase">Lista de Personajes</h3>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-0"><i class="fa fa-plus-circle"></i> Agregar Nuevo</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Imagen)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Edad)</th>
            <th>@Html.DisplayNameFor(model => model.Peso)</th>
            <th>@Html.DisplayNameFor(model => model.Historia)</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PersonajeId">
                        <img src="~/img/Personajes/@item.Imagen" class="img-thumbnail" height="100" width="100" />
                    </a>
                </td>
                <td>@item.Nombre</td>
                <td>@item.Edad</td>
                <td>@item.Peso</td>
                <td>@item.Historia</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PersonajeId" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i></a>
                    <a asp-action="Details" asp-route-id="@item.PersonajeId" class="btn btn-sm btn-success rounded-0"><i class="fas fa-info-circle"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.PersonajeId" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>