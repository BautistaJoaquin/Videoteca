@{
    ViewData["Title"] = "Register Page";
}

@model RegistrationViewModel


    <div class="container">
        <h2 class="text-center mb-5">Registrar</h2>
        <div class="d-flex align-items-center">
            
            <div class="col-6 d-flex justify-content-center">
                
                
                <form method="POST" asp-action="Register" asp-controller="Account" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="Name">Apellido y Nombre</label>
                        <input class="col-10" type="text" asp-for="Name" name="Name" id="Name" placeholder="Tu nombre" >
                        <br>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Email">Correo Electrónico</label>
                        <input class="col-10" type="email" asp-for="Email" name="Email" id="Email" placeholder="Tu Email">
                        <br>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label class="pl-0 col-10" for="Password">Contraseña</label>
                        <input class="col-10" type="password" asp-for="Password" name="Password" id="Password" placeholder="Contraseña">
                        <br>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Repetir Contraseña</label>
                        <input class=" col-10" type="password" asp-for="ConfirmPassword" name="ConfirmPassword" id="re_pass" placeholder="Repite tu contraseña">
                        <br>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term">
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>Acepto todas las
                            las reglas en <a href="#" class="term-service">Terminos de servicio</a></label>
                    </div>
                    @* <div asp-validation-summary="All" class="text-danger"></div> *@
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="btn btn-info" value="Register">
                    </div>
                </form>
            </div>
            <div class="col-6 d-flex justify-content-center">
                <figure><img src="~/img/signup-image.jpg" alt="sing up image"></figure>
                
            </div>
        </div>
    </div>
